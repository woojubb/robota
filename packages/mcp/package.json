        "model-context-protocol",
        "function-calling",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@robota-sdk/core": "workspace:*"
    },
    "peerDependencies": {
        "@modelcontextprotocol/sdk": "^1.11.0"
    },
    "devDependencies": {
        "rimraf": "^5.0.5",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3",
        "vitest": "^1.1.0"
    },
    "publishConfig": {
        "access": "public"
    }
