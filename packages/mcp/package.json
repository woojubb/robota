{
    "name": "@robota-sdk/mcp",
    "version": "0.2.4",
    "description": "Robota's Model Context Protocol integration package",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/woojubb/robota.git",
        "directory": "packages/mcp"
    },
    "homepage": "https://github.com/woojubb/robota/tree/main/packages/mcp#readme",
    "bugs": {
        "url": "https://github.com/woojubb/robota/issues"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "clean": "rimraf dist",
