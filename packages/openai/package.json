    "machine-learning",
    "nlp",
    "natural-language-processing",
    "sdk",
    "library",
    "tool-integration",
    "robota",
    "openai-api",
    "ai-integration"
  ],
  "author": "Robota SDK Team",
  "license": "MIT",
  "dependencies": {
    "@robota-sdk/core": "workspace:*",
