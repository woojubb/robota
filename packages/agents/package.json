{
    "name": "@robota-sdk/agents",
    "version": "1.0.0",
    "description": "Complete AI agent implementation with unified core and tools functionality - conversation management, plugin system, and advanced agent features",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/woojubb/robota.git",
        "directory": "packages/agents"
    },
    "homepage": "https://robota.io/",
    "bugs": {
        "url": "https://github.com/woojubb/robota/issues"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "clean": "rimraf dist",
        "typecheck": "tsc --noEmit",
        "test": "vitest run --passWithNoTests",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix"
    },
    "keywords": [
        "ai",
        "agent",
        "llm",
        "function-calling",
        "typescript",
        "javascript",
        "openai",
        "anthropic",
        "google-ai",
        "claude",
        "gpt",
        "gemini",
        "chatbot",
        "conversational-ai",
        "artificial-intelligence",
        "machine-learning",
        "nlp",
        "natural-language-processing",
        "sdk",
        "library",
        "tool-integration",
        "multi-provider",
        "conversation-management",
        "robota",
        "plugins",
        "unified-agent",
        "complete-agent"
    ],
    "author": "Robota SDK Team",
    "license": "MIT",
    "dependencies": {
        "zod": "^3.24.4",
        "@dqbd/tiktoken": "^1.0.21",
        "openai": "^4.98.0"
    },
    "peerDependencies": {
        "@robota-sdk/openai": "workspace:*",
        "@robota-sdk/anthropic": "workspace:*",
        "@robota-sdk/google": "workspace:*"
    },
    "devDependencies": {
        "@robota-sdk/openai": "workspace:*",
        "@robota-sdk/anthropic": "workspace:*",
        "@robota-sdk/google": "workspace:*",
        "@typescript-eslint/eslint-plugin": "^6.18.0",
        "@typescript-eslint/parser": "^6.18.0",
        "@vitest/coverage-v8": "^3.1.3",
        "eslint": "^8.56.0",
        "rimraf": "^5.0.5",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3",
        "vitest": "^1.1.0"
    },
    "publishConfig": {
        "access": "public"
    }
}