{
  "name": "@robota-sdk/tools",
  "version": "0.2.8",
  "description": "Tools and utilities package for Robota SDK - providing AI function calling and tool integration capabilities",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/woojubb/robota.git",
    "directory": "packages/tools"
  },
  "homepage": "https://github.com/woojubb/robota/tree/main/packages/tools#readme",
  "bugs": {
    "url": "https://github.com/woojubb/robota/issues"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:check": "bun run typecheck && bun run build",
    "dev": "tsup --watch",
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepublishOnly": "bun run clean && bun run build:check && bun run test"
  },
  "keywords": [
    "ai",
    "agent",
    "llm",
    "tools",
    "utilities",
    "function-calling",
    "typescript",
    "robota",
    "sdk",
    "openai",
    "anthropic",
    "mcp",
    "tool-provider",
    "ai-integration"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "zod": "^3.24.4"
  },
  "peerDependencies": {
    "@robota-sdk/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1",
    "eslint": "^8.56.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}