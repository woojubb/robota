{
  "compilerOptions": {
    // TypeScript 기본 설정
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    
    // 엄격한 타입 검사
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    
    // 모듈 관련 설정
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    
    // 기타 설정
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "noEmit": true
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build"
  ]
}
